#!/usr/bin/env bash
# This script is displaying "Best School" 10 times

my_var=1

while [ $my_var -le 20 ]
do
	echo "$my_var"
	if [[ $my_var = 4 ]]
	then
		echo "bad luck from China"
	elif [[ $my_var = 9 ]]
	then 
		echo "bad luck from Japan"
	elif [[ $my_var = 17 ]]
	then
		echo "bad luck from Italy"
	fi
	
	my_var=$((my_var + 1))
done
